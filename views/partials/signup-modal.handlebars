      <div class='modal-content'>
          <span class="close">&times;</span>
              <div class='modal-signup-box'>
                <h1>Sign up for an Account</h1>
                <form action='/api/signup' method="POST">
                  {{!-- <label>UserName:</label> --}}
                  <input type="username" id='username' name='username' placeholder="Username"><br>
                  {{!-- <label>Password:</label> --}}
                  <input type="password" id="pw" name='password' placeholder="Password">
                  <div class='pw-error'></div>
                  <div>
                    <button class='account-button signup-button' type='submit'>Sign up!</button>
                  </div>
              </form>
            </div>
      </div>
    </div>